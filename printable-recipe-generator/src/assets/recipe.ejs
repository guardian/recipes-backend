<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <title><%= recipe.title %></title>
    <style>
      @font-face {
        font-family: 'GuardianRegularEgyptianFont';
        src: url("data:fonts/ttf;base64,<%= fontsBase64.RegularEgyptianFont %>") format('opentype');
      }
      @font-face {
        font-family: 'GuardianRegularSansFont';
        src: url("data:fonts/ttf;base64;<%= fontsBase64.RegularSansFont %>") format('opentype');
      }
      @font-face {
        font-family: 'GuardianHeadlineSemiBoldFont';
        src: url("data:fonts/otf;base64;<%= fontsBase64.HeadlineSemiBoldFont %>") format('truetype');
      }
      @font-face {
        font-family: 'GuardianSansBoldFont';
        src: url("data:fonts/ttf;base64;<%= fontsBase64.SansBoldFont %>") format('opentype');
      }

      body {
        font-family: 'GuardianRegularEgyptianFont', sans-serif;
        font-size: 17px;
        line-height: 1.6;
        margin: 40px;
        color: #20201D;
      }

      .header {
        font-family: 'GuardianHeadlineSemiBoldFont', sans-serif;
        font-size: 28px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 40px;
      }

      .feast-logo {
        height: 40px;
      }

      .guardian-logo {
        height: 40px;
      }

      .recipe-title {
        font-size: 26px;
        font-weight: bold;
      }

      .author {
        font-family: 'GuardianRegularSansFont', sans-serif;
        font-size: 20px;
        margin-bottom: 20px;
        color: #3D4D26;
      }

      .labels {
        margin: 20px 0;
      }

      .timing-table {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        padding: 1rem 0;
        border-top: 1px solid #ccc;
        border-bottom: 1px solid #ccc;
        margin-bottom: 2rem;
      }

      .timing-row {
        font-family: 'GuardianRegularSansFont', sans-serif;
        font-size: 15px;
        display: flex;
        align-items: center;
        gap: 0.6rem;
      }

      .icon {
        width: 20px;
        height: 20px;
        vertical-align: middle;
      }

      .two-column-flow {
        column-count: 2;
        column-gap: 3rem;
        margin-top: 2rem;
      }

      .two-column-flow h3 {
        break-after: avoid;
        font-family: 'GuardianBoldSansFont', sans-serif;
        margin-top: 1rem;
      }

      .two-column-flow ul {
        list-style-type: disc;
        padding-left: 1.5rem;
        margin-bottom: 2rem;
      }

      .two-column-flow li {
        break-inside: avoid;
        font-family: 'GuardianRegularSansFont', sans-serif;
        font-size: 17px;
        margin-bottom: 0.5rem;
      }

      .recipe-footer {
        margin-top: 40px;
        padding-top: 20px;
        border-top: 1px solid #ddd;
        font-size: 14px;
        color: #444;
      }

      .footer-line {
        display: flex;
        align-items: flex-start;
        gap: 10px;
        margin-bottom: 10px;
      }

      .footer-icon svg {
        width: 18px;
        height: 18px;
        flex-shrink: 0;
        color: #666;
      }

      .footer-text a {
        font-family: 'GuardianRegularSansFont', sans-serif;
        font-size: 15px;
        text-decoration: none;
      }

      h3 {
        font-weight: bold;
      }
    </style>
</head>
<body>

<div class="header">
    <div class="feast-logo">
        <%- svgs.FeastLogo %>
    </div>
    <div class="guardian-logo">
        <%- svgs.TheGuardianLogo %>
    </div>
</div>

<div class="recipe-title"><%= recipe.title %></div>
<% if (recipe.contributors && typeof chefs === 'object' && chefs?.[recipe.contributors]) { %>
<div class="author">By <%=  chefs[recipe.contributors].webTitle %></div>
<% } %>
<% if (recipe.contributors && typeof chefs != 'object' ) { %>
    <div class="author">By <%=  recipe.contributors %></div>
<% } %>


<% if (recipe.suitableForDietIds && recipe.suitableForDietIds.length) { %>
    <div class="labels">
        <% for (const label of recipe.suitableForDietIds) {
            const labelKey = label.toLowerCase().replace(/\s+/g, '-');
        %>
        <span>
            <%- svgs[labelKey] %>
      </span>
        <% } %>
    </div>
<% } %>

<div class="timing-table">
    <% for (const time of recipe.timings || []) { %>
        <div class="timing-row">
            <div>
                <% if (time.qualifier === 'prep-time') { %>
                    <svg class="icon" viewBox="0 0 24 24">
                        <circle cx="12" cy="12" r="10" stroke="#000" stroke-width="2" fill="none"/>
                        <path d="M12 6v6l4 2" stroke="#000" stroke-width="2" fill="none"/>
                    </svg>
                <% } else if (time.qualifier === 'cook-time') { %>
                    <svg class="icon" viewBox="0 0 24 24">
                        <path d="M4 10h16v2H4z" fill="#000"/>
                        <circle cx="6" cy="16" r="2" fill="#000"/>
                        <circle cx="18" cy="16" r="2" fill="#000"/>
                    </svg>
                <% } else if (time.qualifier === 'marinate-time') { %>
                    <svg class="icon" viewBox="0 0 24 24">
                        <path d="M12 3v18M5 12h14" stroke="#000" stroke-width="2" fill="none"/>
                    </svg>
                <% } %>
            </div>
            <div><%= time.text %></div>
        </div>
    <% } %>

    <% if (recipe.serves && recipe.serves.length) { %>
        <div class="timing-row">
            <svg class="icon" viewBox="0 0 24 24">
                <path d="M4 4h16v2H4zM4 8h16v2H4zM4 12h16v2H4z" fill="#000"/>
            </svg>
            <div>Serves <%= recipe.serves[0].amount.min %> <%= recipe.serves[0].unit %></div>
        </div>
    <% } %>
</div>

<div class="description"><%= recipe.description %></div>

<div class="two-column-flow">
    <div class="column ingredients">
        <h3>Ingredients</h3>
        <ul>
            <% for (const group of recipe.ingredients || []) { %>
                <% for (const ing of group.ingredientsList || []) { %>
                    <li>
                        <%= ing.amount?.min %>
                        <% if (ing.unit) { %> <%= ing.unit %>
                        <% } %>
                        <%= ing.name %>
                        <% if (ing.suffix) { %> - <%= ing.suffix %>
                        <% } %>
                    </li>
                <% } %>
            <% } %>
        </ul>
    </div>

    <div class="column method">
        <h3>Method</h3>
        <ul>
            <% for (const step of recipe.instructions || []) { %>
                <li><%= step.description %></li>
            <% } %>
        </ul>
    </div>
</div>

<% if (recipe.bookCredit || recipe.featuredImage) { %>
<footer class="recipe-footer">
    <div class="footer-line">
        <% if (recipe.bookCredit) { %>
    <span class="footer-icon">
      <%- svgs["feast-book-outlined"] %>
    </span>
        <span class="footer-text">
        <%= recipe.bookCredit %>>
    </span>
        <% } %>
    </div>
    <div class="footer-line">
        <% if (recipe.featuredImage) { %>
    <span class="footer-icon">
      <%- svgs.camera %>
    </span>

        <span class="footer-text">
        <%= recipe.featuredImage.source %>>
    </span>
        <% } %>
    </div>
</footer>
<% } %>


</body>
</html>
