<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <title><%= title %></title>
    <style>
      body {
        font-family: 'Georgia', serif;
        font-size: 16px;
        line-height: 1.6;
        margin: 40px;
        color: #222;
      }

      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 40px;
      }

      .app-title {
        font-size: 24px;
        font-weight: bold;
      }

      .logo {
        height: 40px;
      }

      .recipe-title {
        font-size: 26px;
        font-weight: bold;
      }

      .author {
        font-size: 16px;
        font-style: italic;
        margin-bottom: 20px;
      }

      .labels {
        margin: 20px 0;
      }

      .label {
        display: inline-block;
        padding: 4px 10px;
        margin-right: 6px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
        color: white;
      }

      .label-vegetarian {
        background-color: #2f6348;
      }

      .label-dairy-free {
        background-color: #f5c344;
        color: #3c2c00;
      }

      .timing-table {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        padding: 1rem 0;
        border-top: 1px solid #ccc;
        border-bottom: 1px solid #ccc;
        margin-bottom: 2rem;
      }

      .timing-row {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        font-size: 14px;
      }

      .icon {
        width: 20px;
        height: 20px;
        vertical-align: middle;
      }

      .two-columns {
        display: flex;
        justify-content: space-between;
        gap: 3rem;
      }

      .column {
        width: 50%;
      }

      .ingredients ul,
      .steps ul {
        padding-left: 1.5rem;
      }

      .ingredients li,
      .steps li {
        margin-bottom: 0.5rem;
      }

      .footer {
        border-top: 1px solid #ccc;
        margin-top: 3rem;
        padding-top: 1rem;
        font-size: 14px;
        color: #777;
      }

      .footer div {
        margin-bottom: 0.3rem;
      }
    </style>
</head>
<body>

<div class="header">
    <img src="./svgs/FeastLogo.svg" class="app-title" alt="The App logo"/>
    <img src="./svgs/TheGuardianLogo.svg" class="logo" alt="The Guardian logo"/>
</div>

<div class="recipe-title"><%= title %></div>
<% if (contributors) { %>
    <div class="author">By <%= contributors %></div>
<% } %>

<% if (suitableForDietIds && suitableForDietIds.length) { %>
    <div class="labels">
        <% for (const label of suitableForDietIds) { %>
            <span class="label label-<%= label.replace(/\s/g, '') %>"><%= label %></span>
        <% } %>
    </div>
<% } %>

<% if (labels && labels.length) { %>
    <div class="labels">
        <% for (const label of labels) {
            const labelKey = label.toLowerCase().replace(/\s+/g, '-');
        %>
        <span class="label label-<%= labelKey %>">
        <%- include(`./svgs/${labelKey}.svg`) %>
            <%= label %>
      </span>
        <% } %>
    </div>
<% } %>

<div class="timing-table">
    <% for (const time of timings || []) { %>
        <div class="timing-row">
            <div>
                <% if (time.qualifier === 'prep-time') { %>
                    <svg class="icon" viewBox="0 0 24 24">
                        <circle cx="12" cy="12" r="10" stroke="#000" stroke-width="2" fill="none"/>
                        <path d="M12 6v6l4 2" stroke="#000" stroke-width="2" fill="none"/>
                    </svg>
                <% } else if (time.qualifier === 'cook-time') { %>
                    <svg class="icon" viewBox="0 0 24 24">
                        <path d="M4 10h16v2H4z" fill="#000"/>
                        <circle cx="6" cy="16" r="2" fill="#000"/>
                        <circle cx="18" cy="16" r="2" fill="#000"/>
                    </svg>
                <% } else if (time.qualifier === 'marinate-time') { %>
                    <svg class="icon" viewBox="0 0 24 24">
                        <path d="M12 3v18M5 12h14" stroke="#000" stroke-width="2" fill="none"/>
                    </svg>
                <% } %>
            </div>
            <div><%= time.text %></div>
        </div>
    <% } %>

    <% if (serves && serves.length) { %>
        <div class="timing-row">
            <svg class="icon" viewBox="0 0 24 24">
                <path d="M4 4h16v2H4zM4 8h16v2H4zM4 12h16v2H4z" fill="#000"/>
            </svg>
            <div>Serves <%= serves[0].amount.min %> <%= serves[0].unit %></div>
        </div>
    <% } %>
</div>

<div class="description"><%= description %></div>

<div class="two-columns">
    <div class="column ingredients">
        <h3>Ingredients</h3>
        <ul>
            <% for (const group of ingredients || []) { %>
                <% for (const ing of group.ingredientsList || []) { %>
                    <li>
                        <%= ing.amount?.min %>
                        <% if (ing.unit) { %> <%= ing.unit %>
                        <% } %>
                        <%= ing.name %>
                        <% if (ing.suffix) { %> - <%= ing.suffix %>
                        <% } %>
                    </li>
                <% } %>
            <% } %>
        </ul>
    </div>

    <div class="column steps">
        <h3>Method</h3>
        <ul>
            <% for (const step of instructions || []) { %>
                <li><%= step.description %></li>
            <% } %>
        </ul>
    </div>
</div>

<% if (bookCredit) { %>
<footer class="recipe-footer">
    <div class="footer-line">
    <span class="footer-icon">
      <%- include('./svgs/feast-book-outlined.svg') %>
    </span>
        <span class="footer-text">
        <% bookCredit %>>
    </span>
    </div>
    <div class="footer-line">
    <span class="footer-icon">
      <%- include('./svgs/camera.svg') %>
    </span>
        <% if (featuredImage) { %>
        <span class="footer-text">
        <% featuredImage.source %>>
    </span>
        <% } %>
    </div>
</footer>
<% } %>


</body>
</html>
