{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/guardian/recipes-backend/refs/heads/main/schema/ingredients-template-list.json",
  "title": "Ingredients Template List",
  "description": "A section of ingredients with an optional section name",
  "type": "object",
  "properties": {
    "recipeSection": {
      "type": [
        "string",
        "null"
      ],
      "description": "Name of the recipe section (e.g., 'For the sauce', 'For the garnish')"
    },
    "ingredientsList": {
      "type": [
        "array",
        "null"
      ],
      "description": "List of ingredients in this section",
      "items": {
        "allOf": [
          {
            "$ref": "ingredient-item.json"
          },
          {
            "properties": {
              "template": {
                "$ref": "string-template.json"
              }
            }
          }
        ]
      }
    }
  },
  "required": [
    "ingredientsList"
  ]
}
